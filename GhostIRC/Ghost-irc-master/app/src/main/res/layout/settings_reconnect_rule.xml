<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/rule_interval"
        android:layout_marginLeft="?attr/dialogPreferredPadding"
        android:layout_marginStart="?attr/dialogPreferredPadding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Spinner
        android:id="@+id/rule_duration_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.Spinner" />

    <EditText
        android:id="@+id/rule_repeat_times"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:hint="âˆž" />

    <FrameLayout
        android:id="@+id/rule_more"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="?attr/dialogPreferredPadding"
        android:paddingEnd="?attr/dialogPreferredPadding">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_marginRight="-2dp"
            android:scaleType="center"
            style="@style/Icon"
            app:srcCompat="@drawable/ic_more_vert"
            android:background="?selectableItemBackgroundBorderless"
            android:duplicateParentState="true" />

    </FrameLayout>


</LinearLayout>
